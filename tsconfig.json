{
  "compilerOptions": {
    "target": "es2016",  // Specify ECMAScript target version
    "module": "commonjs",  // Specify module code generation
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,  // Generate .d.ts files for TypeScript definitions
    "outDir": "./dist",  // Output directory for compiled files
    "rootDir": "./src",  // Root directory for source files
    "declarationMap": true  // Optional: Generate source maps for .d.ts files (useful for debugging)
  },
  "include": ["src"],  // Include all TypeScript source files
  "exclude": ["node_modules", "dist"]  // Exclude node_modules and dist from compilation
}